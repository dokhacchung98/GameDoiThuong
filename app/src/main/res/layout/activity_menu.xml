<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_menu"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backgroundb"
    android:gravity="center"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.ae4.doi_thuong.Menu">
<ImageView
    android:id="@+id/icon"
    android:layout_width="150dp"
    android:layout_height="150dp"
    android:src="@drawable/icon"/>
    <FrameLayout
        android:id="@+id/framLayoutplay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/playbutton"
        android:layout_marginTop="20dp">


        <TextView
            android:id="@+id/textplay"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:text="Play"
            android:textColor="#08146e"
            android:textSize="50dp"
            android:textStyle="bold" />
    </FrameLayout>

    <FrameLayout
        android:id="@+id/framLayoutsuport"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/playbutton"
        android:layout_marginTop="10dp">


        <TextView
            android:id="@+id/textsuport"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Support"
            android:textColor="#046b60"
            android:textSize="50dp"
            android:textStyle="bold" />
    </FrameLayout>

    <FrameLayout
        android:id="@+id/framLayoutabout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/playbutton"
        android:layout_marginTop="10dp">


        <TextView
            android:id="@+id/textabout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="About"
            android:textColor="#0f6805"
            android:textSize="50dp"
            android:textStyle="bold" />
    </FrameLayout>

    <FrameLayout
        android:id="@+id/framLayoutexit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/playbutton"
        android:layout_marginTop="10dp">


        <TextView
            android:id="@+id/textexit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Exit"
            android:textColor="#66066c"
            android:textSize="50dp"
            android:textStyle="bold" />
    </FrameLayout>


</LinearLayout>
